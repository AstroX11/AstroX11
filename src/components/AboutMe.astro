<style>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;500;600;700&display=swap");

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
    animation: animatedBackground 20s infinite ease-in-out;
  }

  @keyframes animatedBackground {
    0% {
      transform: scale(1) translateX(0px) translateY(0px);
      filter: blur(100px) hue-rotate(0deg);
      opacity: 0.7;
    }
    25% {
      transform: scale(1.05) translateX(10px) translateY(-5px);
      filter: blur(100px) hue-rotate(90deg);
      opacity: 0.9;
    }
    50% {
      transform: scale(1.1) translateX(0px) translateY(-10px);
      filter: blur(100px) hue-rotate(180deg);
      opacity: 1;
    }
    75% {
      transform: scale(1.05) translateX(-10px) translateY(-5px);
      filter: blur(100px) hue-rotate(270deg);
      opacity: 0.9;
    }
    100% {
      transform: scale(1) translateX(0px) translateY(0px);
      filter: blur(100px) hue-rotate(360deg);
      opacity: 0.7;
    }
  }

  #container {
    font-family: "Fira Sans", sans-serif;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: auto;
    position: relative;
  }

  main {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  #about {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
    padding: 32px;
    text-align: left;
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
  }

  h1 {
    font-size: 48px;
    margin-top: 0;
    color: #111827;
    line-height: 1.2;
    animation: fadeIn 1s ease-in;
  }

  h2 {
    font-size: 28px;
    color: #111827;
    margin: 1.5em 0 0.5em;
    animation: fadeIn 1.2s ease-in;
  }

  p {
    font-size: 24px;
    color: #4b5563;
    line-height: 1.6;
    max-width: 700px;
    margin: 1em 0;
    animation: fadeIn 1.5s ease-in;
  }

  ul {
    font-size: 20px;
    color: #4b5563;
    line-height: 1.8;
    margin: 1em 0;
    padding-left: 0;
    list-style: none;
    animation: fadeIn 1.7s ease-in;
  }

  ul li {
    margin-bottom: 0.8em;
    display: flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    padding: 8px;
    border-radius: 8px;
  }

  ul li:hover {
    background-color: rgba(59, 130, 246, 0.05);
    transform: translateX(8px);
  }

  ul li svg {
    color: #3b82f6;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  ul li:hover svg {
    transform: scale(1.1);
  }

  #links {
    display: flex;
    gap: 24px;
    margin-top: 2em;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #111827;
    text-decoration: none;
    font-size: 18px;
    transition:
      color 0.2s,
      transform 0.3s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
    transform: translateY(-2px);
  }

  #links a svg {
    height: 1.2em;
    margin-left: 10px;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 12px;
    padding: 14px 24px;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
    transform: translateY(-2px);
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 768px) {
    #container {
      min-height: 100vh;
    }

    main {
      padding: 16px;
      align-items: flex-start;
      padding-top: 40px;
    }

    #about {
      padding: 20px;
      text-align: center;
      align-items: center;
      width: 100%;
      max-width: 100%;
    }

    #links {
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;
      width: 100%;
    }

    #links a {
      padding: 10px 14px;
      font-size: 16px;
    }

    #links a.button {
      padding: 12px 20px;
    }

    h1 {
      line-height: 1.3;
      font-size: 32px;
      margin-bottom: 16px;
    }

    h2 {
      font-size: 22px;
      margin: 1.2em 0 0.8em;
    }

    p {
      font-size: 18px;
      text-align: center;
      max-width: 100%;
    }

    ul {
      font-size: 16px;
      text-align: left;
      width: 100%;
      max-width: 100%;
    }

    ul li {
      margin-bottom: 0.6em;
      padding: 6px;
      font-size: 16px;
    }

    ul li:hover {
      transform: translateX(4px);
    }
  }

  @media screen and (max-width: 480px) {
    main {
      padding: 12px;
      padding-top: 30px;
    }

    #about {
      padding: 16px;
    }

    h1 {
      font-size: 28px;
    }

    h2 {
      font-size: 20px;
    }

    p {
      font-size: 16px;
    }

    ul li {
      font-size: 15px;
      gap: 10px;
    }

    #links {
      flex-direction: column;
      align-items: stretch;
      gap: 12px;
    }

    #links a {
      justify-content: center;
      padding: 12px;
    }
  }
</style>
