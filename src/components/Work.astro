<style>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;500;600;700&display=swap");

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
    animation: animatedBackground 20s infinite ease-in-out;
  }

  @keyframes animatedBackground {
    0% {
      transform: scale(1) translateX(0px) translateY(0px);
      filter: blur(100px) hue-rotate(0deg);
      opacity: 0.7;
    }
    25% {
      transform: scale(1.05) translateX(10px) translateY(-5px);
      filter: blur(100px) hue-rotate(90deg);
      opacity: 0.9;
    }
    50% {
      transform: scale(1.1) translateX(0px) translateY(-10px);
      filter: blur(100px) hue-rotate(180deg);
      opacity: 1;
    }
    75% {
      transform: scale(1.05) translateX(-10px) translateY(-5px);
      filter: blur(100px) hue-rotate(270deg);
      opacity: 0.9;
    }
    100% {
      transform: scale(1) translateX(0px) translateY(0px);
      filter: blur(100px) hue-rotate(360deg);
      opacity: 0.7;
    }
  }

  #container {
    font-family: "Fira Sans", sans-serif;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: auto;
    position: relative;
  }

  main {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  #work {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
    padding: 32px;
    text-align: left;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  h1 {
    font-size: 48px;
    margin-top: 0;
    color: #111827;
    line-height: 1.2;
    animation: fadeIn 1s ease-in;
  }

  h2 {
    font-size: 28px;
    color: #111827;
    margin: 1.5em 0 0.5em;
    animation: fadeIn 1.2s ease-in;
  }

  p {
    font-size: 24px;
    color: #4b5563;
    line-height: 1.6;
    max-width: 700px;
    margin: 1em 0;
    animation: fadeIn 1.5s ease-in;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 32px;
    width: 100%;
    margin: 2em 0;
    animation: fadeIn 1.7s ease-in;
  }

  .project-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 20px;
    padding: 32px;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .project-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .project-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(50, 69, 255, 0.1);
    border-color: rgba(50, 69, 255, 0.2);
  }

  .project-card:hover::before {
    transform: scaleX(1);
  }

  .project-icon {
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, #3245ff 0%, #bc52ee 50%, #ff6b6b 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    transition: all 0.4s ease;
    position: relative;
    box-shadow: 0 8px 32px rgba(50, 69, 255, 0.3);
  }

  .project-icon::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 16px;
    background: linear-gradient(135deg, #3245ff 0%, #bc52ee 50%, #ff6b6b 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .project-card:hover .project-icon::after {
    opacity: 0.1;
  }

  .project-icon svg {
    color: white;
    z-index: 1;
    position: relative;
  }

  .project-card:hover .project-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 12px 40px rgba(50, 69, 255, 0.4);
  }

  .project-card h3 {
    font-size: 24px;
    font-weight: 700;
    color: #111827;
    margin: 0 0 16px 0;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .project-card:hover h3 {
    color: #3245ff;
  }

  .project-card p {
    font-size: 16px;
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
    animation: none;
    transition: color 0.3s ease;
  }

  .project-card:hover p {
    color: #4b5563;
  }

  #links {
    display: flex;
    gap: 24px;
    margin-top: 2em;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #111827;
    text-decoration: none;
    font-size: 18px;
    transition:
      color 0.2s,
      transform 0.3s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
    transform: translateY(-2px);
  }

  #links a svg {
    height: 1.2em;
    margin-left: 10px;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 12px;
    padding: 14px 24px;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
    transform: translateY(-2px);
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 768px) {
    #container {
      min-height: 100vh;
    }

    main {
      padding: 16px;
      align-items: flex-start;
      padding-top: 40px;
    }

    #work {
      padding: 20px;
      text-align: center;
      align-items: center;
      width: 100%;
      max-width: 100%;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      margin: 1.5em 0;
    }

    .project-card {
      padding: 24px;
      text-align: left;
      border-radius: 16px;
    }

    .project-card:hover {
      transform: translateY(-8px) scale(1.01);
    }

    .project-icon {
      width: 64px;
      height: 64px;
      margin-bottom: 20px;
    }

    .project-card h3 {
      font-size: 22px;
    }

    .project-card p {
      font-size: 15px;
      line-height: 1.5;
    }

    #links {
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;
      width: 100%;
    }

    #links a {
      padding: 10px 14px;
      font-size: 16px;
    }

    #links a.button {
      padding: 12px 20px;
    }

    h1 {
      line-height: 1.3;
      font-size: 32px;
      margin-bottom: 16px;
    }

    h2 {
      font-size: 22px;
      margin: 1.2em 0 0.8em;
    }

    p {
      font-size: 18px;
      text-align: center;
      max-width: 100%;
    }
  }

  @media screen and (max-width: 480px) {
    main {
      padding: 12px;
      padding-top: 30px;
    }

    #work {
      padding: 16px;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 20px;
      margin: 1.2em 0;
    }

    .project-card {
      padding: 20px;
      border-radius: 12px;
    }

    .project-card:hover {
      transform: translateY(-6px) scale(1.005);
    }

    .project-icon {
      width: 56px;
      height: 56px;
      border-radius: 12px;
      margin-bottom: 16px;
    }

    .project-icon svg {
      width: 28px;
      height: 28px;
    }

    .project-card h3 {
      font-size: 20px;
      margin-bottom: 12px;
    }

    .project-card p {
      font-size: 14px;
    }

    h1 {
      font-size: 28px;
    }

    h2 {
      font-size: 20px;
    }

    p {
      font-size: 16px;
    }

    #links {
      flex-direction: column;
      align-items: stretch;
      gap: 12px;
    }

    #links a {
      justify-content: center;
      padding: 12px;
    }
  }

  @media screen and (min-width: 1200px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }

    .project-card {
      padding: 36px;
    }

    .project-icon {
      width: 80px;
      height: 80px;
      border-radius: 18px;
    }

    .project-icon svg {
      width: 36px;
      height: 36px;
    }

    .project-card h3 {
      font-size: 26px;
    }

    .project-card p {
      font-size: 17px;
    }
  }
</style>
