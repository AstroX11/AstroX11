---
import background from "../assets/background.svg";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main>
    <section id="hero">
      <h1>Hi, I'm AstroX11</h1>
      <p>I'm AstroX11, developing solutions through code.</p>
      <section id="links">
        <a class="button" href="/projects">View Projects</a>
        <a href="/about">
          About Me
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="16"
            height="16"
          >
            <path
              fill="currentColor"
              d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"
            ></path>
          </svg>
        </a>
        <a href="https://github.com/AstroX11" target="_blank">
          GitHub
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="16"
            height="16"
          >
            <path
              fill="currentColor"
              d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.17 6.84 9.5.5.09.66-.22.66-.49v-1.73c-2.79.61-3.38-1.34-3.38-1.34-.46-1.16-1.12-1.47-1.12-1.47-.91-.62.07-.61.07-.61 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.08.63-1.33-2.22-.25-4.56-1.11-4.56-4.94 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.03A9.56 9.56 0 0112 6.8c.85.004 1.71.12 2.52.35 1.91-1.3 2.75-1.03 2.75-1.03.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.84-2.34 4.69-4.57 4.94.36.31.68.92.68 1.85v2.74c0 .27.16.58.67.49A10.01 10.01 0 0022 12c0-5.52-4.48-10-10-10z"
            ></path>
          </svg>
        </a>
      </section>
    </section>
  </main>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;500;600;700&display=swap");

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
    animation: animatedBackground 20s infinite ease-in-out;
  }

  @keyframes animatedBackground {
    0% {
      transform: scale(1) translateX(0px) translateY(0px);
      filter: blur(100px) hue-rotate(0deg);
      opacity: 0.7;
    }
    25% {
      transform: scale(1.05) translateX(10px) translateY(-5px);
      filter: blur(100px) hue-rotate(90deg);
      opacity: 0.9;
    }
    50% {
      transform: scale(1.1) translateX(0px) translateY(-10px);
      filter: blur(100px) hue-rotate(180deg);
      opacity: 1;
    }
    75% {
      transform: scale(1.05) translateX(-10px) translateY(-5px);
      filter: blur(100px) hue-rotate(270deg);
      opacity: 0.9;
    }
    100% {
      transform: scale(1) translateX(0px) translateY(0px);
      filter: blur(100px) hue-rotate(360deg);
      opacity: 0.7;
    }
  }

  #container {
    font-family: "Fira Sans", sans-serif;
    height: 100vh;
    overflow: hidden;
    position: relative;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
    padding: 32px;
    text-align: left;
    max-width: 800px;
  }

  h1 {
    font-size: 48px;
    margin-top: 0;
    color: #111827;
    line-height: 1.2;
    animation: fadeIn 1s ease-in;
  }

  p {
    font-size: 24px;
    color: #4b5563;
    line-height: 1.6;
    max-width: 700px;
    margin: 1em 0;
    animation: fadeIn 1.5s ease-in;
  }

  #links {
    display: flex;
    gap: 24px;
    margin-top: 2em;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #111827;
    text-decoration: none;
    font-size: 18px;
    transition:
      color 0.2s,
      transform 0.3s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
    transform: translateY(-2px);
  }

  #links a svg {
    height: 1.2em;
    margin-left: 10px;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 12px;
    padding: 14px 24px;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
    transform: translateY(-2px);
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 768px) {
    #container {
      display: flex;
      flex-direction: column;
    }

    #hero {
      padding: 24px;
      text-align: center;
      align-items: center;
    }

    #links {
      flex-wrap: wrap;
      justify-content: center;
    }

    #links a.button {
      padding: 12px 20px;
    }

    h1 {
      line-height: 1.3;
      font-size: 36px;
    }

    p {
      font-size: 20px;
    }
  }
</style>
